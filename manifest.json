{
   "manifest_version": 3,
   "name": "NoADS",
   "description": "Smk extension",
   "version": "1.0.2",
   "short_name": "NoADS",
   "action": {
      "default_popup": "html/main.html",
      "default_icon": "img/icon128_2.png"
   },
   "icons": {
      "128": "img/icon128_2.png",
      "16": "img/icon16.png",
      "32": "img/icon32.png"
   },
   "content_scripts": [
      {
         "js": [
            "js/content.js"
         ],
         "matches": [
            "https://youtube.com/*",
            "https://www.youtube.com/*"
         ]
      }
   ]
}